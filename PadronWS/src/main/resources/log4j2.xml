<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration status="INFO">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="padron-ws [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1}%n%msg%n%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="console" />
        </Root>    
		<Logger name="cr.infosgroup.padron.ws.rest" level="debug" additivity="false">
  			<AppenderRef ref="console" />
		</Logger>
		<Logger name="org.springframework.security" level="info" additivity="false">
  			<AppenderRef ref="console" />
		</Logger>		
    </Loggers>
</Configuration>